<h2>Friendships</h2>

<% if @friendships.empty? %>
  <p>There are no friendships to view! Don't be shy, add some friends :)</p>
<% end %>

<% @friendships.each do |friendship| %>
<% friend = friendship.friend %>
<table id="<%= dom_id(friendship) %>" class="friendship">
  <tr>
    <td>
      <%= image_tag friend.gravatar_url, class: "gravie" %>
    </td>
    <td>
      <strong><%= link_to friend.name, profiles_path(friend) %></strong>
      <% if friendship.pending? %>
      <em>Friendship is pending</em> <%= link_to 'Delete request', edit_friendship_path(friendship) %>
      <% end %>
      <% if friendship.requested? %>
      <em>Friendship requested</em> <%= link_to 'Accept request', edit_friendship_path(friendship) %>
      <% end %>
      <% if friendship.accepted? %>
      <em>Friendship active</em> <%= link_to 'Edit request', edit_friendship_path(friendship) %>
      <% end %>
    </td>
  </tr>
</table>
<% end %>
